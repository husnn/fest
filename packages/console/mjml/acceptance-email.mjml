<mjml>
  <mj-head>
    <mj-include path="./snippets/globals.mjml" />
  </mj-head>
  <mj-body>
    <mj-section>
      <mj-column>
        <mj-text font-size="50px">🎉</mj-text>
        <mj-spacer height="30px" />
        <mj-text font-size="24px" font-weight="500"
          >Hey 👋🏼 Welcome to Fanbase!</mj-text
        >
        <mj-raw> {{#if isCreator}} </mj-raw>
        <mj-text>Invite up to 1000 fans to join you!</mj-text>
        <mj-raw> {{/if}} </mj-raw>
        <mj-spacer height="30px" />
        <<mj-button href="{{loginUrl}}" align="left" mj-class="btn-primary">
          Log in to your account
        </mj-button>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
