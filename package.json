{
  "name": "fanbase",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=14.15.0"
  },
  "scripts": {
    "watch": "tsc --build --watch tsconfig.build.json",
    "eslint:check": "eslint --ext .js,.jsx,.ts,.tsx .",
    "eslint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "serve:api": "yarn workspace @fanbase/api serve",
    "build:web": "yarn workspace @fanbase/web build"
  },
  "devDependencies": {
    "@types/node": "^15.12.1",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "@yarnpkg/pnpify": "^3.0.0-rc.6",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "latest",
    "prettier": "^2.3.1",
    "typescript": "^4.3.2"
  }
}
